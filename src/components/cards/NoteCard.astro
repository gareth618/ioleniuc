---
import { dateToString } from '../../utils/dates'

type Props = {
  slug: string
  title: string
  date: number | Date
}

const { slug, title, date } = Astro.props
---

<a class="flex justify-between gap-2 bg-gray-800 p-4 hover:bg-gray-700 max-sm:flex-col sm:items-center" href={`/note/${slug}/`}>
  <div class="text-xl font-bold" transition:name={slug + '-title'}>{title}</div>
  <div class="font-semibold text-gray-400" transition:name={slug + '-date'}>{dateToString(date)}</div>
</a>
