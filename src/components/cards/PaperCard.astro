---
import Twemoji from '../general/Twemoji.vue'

type Props = {
  title: string
  icon: string
  abstract: string
  link: string
}

const { title, icon, abstract, link } = Astro.props
---

<article class="group flex max-w-md flex-col bg-gray-700 shadow-lg transition-transform">
  <div class="relative bg-gray-800 p-4">
    <div class="absolute -left-4 -top-4 aspect-square h-8 rounded-full bg-gray-700 p-2 shadow-lg transition-transform group-focus-within:scale-125 group-hover:scale-125">
      <Twemoji emoji={icon} />
    </div>
    <div class="text-lg font-bold">{title}</div>
  </div>
  <div class="flex flex-grow flex-col justify-between gap-4 p-4">
    <div>{abstract}</div>
    <a class="w-fit self-end bg-gray-800 px-3 py-2 font-bold hover:bg-gray-700" href={link} target="_blank">{link[0] === '/' ? 'PDF' : 'WEB'}</a>
  </div>
</article>
