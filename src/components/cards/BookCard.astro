---
import Rating from '../general/Rating.astro'

type Props = {
  title: string
  author: string
  rating: string
  cover: string
}

const { title, author, rating, cover } = Astro.props
---

<article class="flex gap-4 bg-gray-800 p-4 shadow-lg">
  <img class="h-28" src={cover} alt={title} />
  <div class="flex flex-col justify-between">
    <div class="flex flex-col justify-stretch gap-2">
      <div class="font-semibold">{title}</div>
      <div class="text-sm text-gray-400">{author}</div>
    </div>
    <Rating rating={rating} />
  </div>
</article>
